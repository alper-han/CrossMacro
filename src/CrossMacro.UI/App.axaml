<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CrossMacro.UI.App"
             xmlns:local="using:CrossMacro.UI"
             xmlns:vm="using:CrossMacro.UI.ViewModels"
             xmlns:tabs="using:CrossMacro.UI.Views.Tabs">
    
    <Application.DataTemplates>
        <DataTemplate DataType="{x:Type vm:RecordingViewModel}">
            <tabs:RecordingTabView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PlaybackViewModel}">
            <tabs:PlaybackTabView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:FilesViewModel}">
            <tabs:FilesTabView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TextExpansionViewModel}">
            <tabs:TextExpansionTabView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <tabs:SettingsTabView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ScheduleViewModel}">
            <tabs:ScheduleTabView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ShortcutViewModel}">
            <tabs:ShortcutTabView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EditorViewModel}">
            <tabs:EditorTabView/>
        </DataTemplate>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary x:Key="Theme.Classic">
                <ResourceDictionary.MergedDictionaries>
                    <ResourceInclude Source="/Themes/Classic.axaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
            <ResourceDictionary x:Key="Theme.Latte">
                <ResourceDictionary.MergedDictionaries>
                    <ResourceInclude Source="/Themes/Latte.axaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
            <ResourceDictionary x:Key="Theme.Mocha">
                <ResourceDictionary.MergedDictionaries>
                    <ResourceInclude Source="/Themes/Mocha.axaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
            <ResourceDictionary x:Key="Theme.Dracula">
                <ResourceDictionary.MergedDictionaries>
                    <ResourceInclude Source="/Themes/Dracula.axaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
            <ResourceDictionary x:Key="Theme.Nord">
                <ResourceDictionary.MergedDictionaries>
                    <ResourceInclude Source="/Themes/Nord.axaml" />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Themes/Classic.axaml" />
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="StandardFont">Inter, Segoe UI, DejaVu Sans, Noto Sans, Liberation Sans, sans-serif</FontFamily>
            <FontFamily x:Key="EmojiFont">avares://CrossMacro.UI.Core/Assets/Fonts/NotoColorEmoji.ttf#Noto Color Emoji</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="/Styles/AppStyles.axaml"/>
    </Application.Styles>
</Application>
